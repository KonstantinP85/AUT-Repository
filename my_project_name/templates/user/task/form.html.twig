{% extends 'user/userbase.html.twig' %}
{% block body %}
<div class="modal fade" id="update" tabindex="-1" role="dialog" aria-lablelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role ="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Attention</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Did you complete this task? </p>
            </div>
            <div class="modal-footer">
                {{ form_start(UserTask, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
                <a type="button" href="{{ path('user_task_update', {'id':task_item.id}) }}" class="btn-success" id="btn_update">Yes</a>

                <button type="button" class="btn-danger" data-dismiss="modal" id="btn_close">No</button>

            </div>
        </div>
    </div>
</div>
{% endblock %}
