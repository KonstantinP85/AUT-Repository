{# total items count #}
<div id="result">
    <table class="table table-hover table-sm" id="result">
        <tr>
            {# sorting of properties based on query components #}

            <th{% if pagination.isSorted('a.author') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Author', 'a.author') }}
            </th>
            <th{% if pagination.isSorted('a.executor') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Executor', 'a.executor') }}
            </th>
            <th{% if pagination.isSorted('a.content') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Tasks', 'a.content') }}
            </th>
            <th{% if pagination.isSorted('a.create_at') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Date create', 'a.create_at') }}
            </th>
            <th{% if pagination.isSorted('a.execute') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Execute', 'a.execute') }}
            </th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>

        {# table body #}
        {% for article in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>

                <td>{{ article.author }}</td>
                <td>{{ article.executor }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.create_at | date('d/m/Y H:i')  }}</td>
                <td>{{ article.execute }}</td>
                <td><a class = "btn btn-primary" href="{{ path('admin_task_update', {'id':article.id}) }}">
                        Update task</a></td>
                <td><a class = "btn btn-danger" href="{{ path('admin_task_delete', {'id':article.id}) }}">
                        Delete</a></td>
            </tr>
        {% endfor %}
    </table>

{# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>

